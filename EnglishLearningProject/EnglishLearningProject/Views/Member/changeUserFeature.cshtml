@using EnglishLearningProject.ViewModels
@model UserUpdateViewModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = "_UserLayout";
}

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial.cshtml")
}




<div asp-validation-summary="ModelOnly" class="alert-danger"></div>

<form asp-controller="Member" asp-action="changeUserFeature" method="post">

    <div class="mb-3">
        <label class="form-label text-white" asp-for="Name"></label>
        <input type="text" class="form-control text-white bg-transparent" asp-for="Name" placeholder="İsim Giriniz">
        <span class="text-danger " asp-validation-for="Name"></span>
    </div>

    <div class="mb-3">
        <label class="form-label text-white" asp-for="Surname"></label>
        <input type="text" class="form-control text-white bg-transparent" asp-for="Surname" placeholder="Soyisim Giriniz">
        <span class="text-danger" asp-validation-for="Surname"></span>
    </div>

    <div class="mb-3">
        <label class="form-label text-white" asp-for="UserName"></label>
        <input type="text" class="form-control text-white bg-transparent" asp-for="UserName" placeholder="Kullanıcı Adı Giriniz">
        <span class="text-danger" asp-validation-for="UserName"></span>
    </div>

    <div class="mb-3">
        <label class="form-label text-white" asp-for="Email"></label>
        <input type="text" class="form-control text-white bg-transparent" asp-for="Email" placeholder="Email Giriniz">
        <span class="text-danger" asp-validation-for="Email"></span>
    </div>
    <div class="mb-3">
        <label class="form-label text-white" asp-for="quizQuestionCount"></label>
        <input type="text" class="form-control text-white bg-transparent" asp-for="quizQuestionCount" placeholder="Bir Günde Çözülecek Soru Sayısını Giriniz">
        <span class="text-danger" asp-validation-for="quizQuestionCount"></span>
    </div>

    <button class="btn btn-outline-info">Kullanıcı Bilgilerimi Güncelle.</button>
</form>


