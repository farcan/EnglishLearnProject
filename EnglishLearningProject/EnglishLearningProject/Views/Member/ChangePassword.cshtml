@{
    Layout = "_UserLayout";
}
@using EnglishLearningProject.ViewModels
@model ChangePasswordViewModel



@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-danger" role="alert">
        Şifreniz Başarıyla Yenilenmiştir.
    </div>
}


<div asp-validation-summary="ModelOnly" class="alert alert-danger">
</div>

<form asp-action="PasswordChanges" asp-controller="Member" method="post">
    <div class="mb-3">
        <label for="oldPassword" class="form-label">Old Password</label>
        <input class="form-control" asp-for="oldPassword" id="oldPassword">

    </div>
    <div class="mb-3">
        <label for="newPassword" class="form-label">Password</label>
        <input asp-for="newPassword" class="form-control" id="newPassword">
    </div>

    <div class="mb-3">
        <label for="newConfirmedPassword" class="form-label">Confirm Password</label>
        <input asp-for="newConfirmedPassword" class="form-control" id="newConfirmedPassword">
    </div>

    <button type="submit" class="btn btn-primary">ChangePassword</button>
</form>
