@{
}


<form asp-controller="Member" asp-action="AddWord" method="post">

    <div class="mb-3">
        <label  class="form-label" asp-for="WordEN"></label>
        <input type="text" class="form-control" asp-for="WordEN" placeholder="İngilizce Kelime Giriniz">
        <span class="text-danger" asp-validation-for="WordEN"></span>
    </div>

    <div class="mb-3">
        <label  class="form-label" asp-for="WordTR"></label>
        <input type="text" class="form-control" asp-for="WordTR" placeholder="Türkçe Kelime Giriniz">
        <span class="text-danger" asp-validation-for="WordTR"></span>
    </div>

    <div class="mb-3">
        <label class="form-label" asp-for="WordSentences"></label>
        <input type="text" class="form-control" asp-for="WordSentences" placeholder="İngilizce Cümle Giriniz">
        <span class="text-danger" asp-validation-for="WordSentences"></span>
    </div>

    <button class="btn btn-light">Kelime Ekle</button>
</form>
